

@using Entity_Layer
@model Authors
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<h1>Edit</h1>

<form class="form-group">
    <label>Name</label><br />
    <input type="text" value=@Model.authorName id ="getName"/><br />
    <label>Birthday</label><br />
    <input type="date" value=@Model.authorBday id ="getBday"/><br />
</form>
<button class="btn-primary btn-primary" id="edit_button">Submit</button>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function(){
        $("#edit_button").click(function(){
            var obj={};
            obj.authorName = $("#getName").val();
            obj.authorBday = $("#getBday").val();
            $.ajax({
                url:"/Authors/Edit",
                type:"POST",
                data:obj
            }).done(function(data){
                alert("success");
            });
        });
    });
</script>


