@using Entity_Layer
@model Categories
@{
    Layout = null;
}

<form class="form-group">
    <label>Name</label><br />
    <input type="text" value=@Model.categoryName id="getName"/><br>
</form>
    <button class="btn btn-primary" id = "edit_button">Submit</button>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function(){
        $("#edit_button").click(function(){
            var obj = {};
            obj.CategoryName = $("#getName").val();
            obj.CategoryID = @Model.categoryID;
            $.ajax({
                url: "/Categories/Edit",
                type: "POST",
                data: obj
            }).done(function(data){
                alert("success");
            });
        });
    });
</script>

